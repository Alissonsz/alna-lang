{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Alna",
  "scopeName": "source.alna",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#function-declaration" },
    { "include": "#variable-declaration" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.alna",
          "match": "//.*$"
        },
        {
          "name": "comment.block.alna",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.alna",
          "match": "\\b(if|else|while|for|return|break|continue)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.alna",
          "match": "\\b(int|i8|i16|i32|i64|u8|u16|u32|u64|float|f32|f64|bool|string|void)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.alna",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.alna",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.alna",
              "match": "\\\\(n|t|r|\\\\|\"|')"
            }
          ]
        },
        {
          "name": "string.quoted.single.alna",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.alna",
              "match": "\\\\(n|t|r|\\\\|\"|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.alna",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.alna",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.hex.alna",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.alna",
          "match": "\\b0[bB][01]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.alna",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.alna",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.alna",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.assignment.alna",
          "match": "(=|\\+=|\\-=|\\*=|\\/=|%=)"
        }
      ]
    },
    "function-declaration": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s+(([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\()",
          "captures": {
            "1": { "name": "storage.type.alna" },
            "3": { "name": "entity.name.function.alna" }
          }
        }
      ]
    },
    "variable-declaration": {
      "patterns": [
        {
          "match": "\\b(int|i8|i16|i32|i64|u8|u16|u32|u64|float|f32|f64|bool|string|void)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "storage.type.alna" },
            "2": { "name": "variable.other.declaration.alna" }
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.alna",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
